{
  "projectName": "Advanced CACP Logger Demo",
  "globalLevel": "info",
  "timestampMode": "absolute",
  "format": {
    "style": "brackets",
    "componentCase": "upper",
    "timestamp": "HH:mm:ss.SSS"
  },
  "display": {
    "timestamp": true,
    "emoji": true,
    "component": true,
    "level": false,
    "message": true,
    "jsonPayload": true,
    "stackTrace": true
  },
  "components": {
    "cacp": { 
      "emoji": "🎯", 
      "color": "#4A90E2", 
      "name": "CACP-Core",
      "level": "debug"
    },
    "soundcloud": { 
      "emoji": "🎵", 
      "color": "#FF5500", 
      "name": "SoundCloud",
      "level": "trace"
    },
    "youtube": { 
      "emoji": "📹", 
      "color": "#FF0000", 
      "name": "YouTube",
      "level": "info"
    },
    "site-detector": { 
      "emoji": "🔍", 
      "color": "#00C896", 
      "name": "SiteDetector",
      "level": "debug"
    },
    "websocket": { 
      "emoji": "🌐", 
      "color": "#9B59B6", 
      "name": "WebSocket",
      "level": "warn"
    },
    "popup": { 
      "emoji": "🎛️", 
      "color": "#FF6B6B", 
      "name": "Popup",
      "level": "debug"
    },
    "background": { 
      "emoji": "🔧", 
      "color": "#4ECDC4", 
      "name": "Background",
      "level": "info"
    },
    "priority-manager": { 
      "emoji": "⚖️", 
      "color": "#45B7D1", 
      "name": "PriorityManager",
      "level": "warn"
    },
    "settings": { 
      "emoji": "⚙️", 
      "color": "#96CEB4", 
      "name": "Settings",
      "level": "info"
    },
    "test": { 
      "emoji": "🧪", 
      "color": "#FFEAA7", 
      "name": "Test",
      "level": "trace"
    }
  },
  "fileOverrides": {
    "src/sites/soundcloud.js": { 
      "level": "trace",
      "component": "soundcloud",
      "emoji": "🎵",
      "display": {
        "timestamp": true,
        "emoji": true,
        "component": true,
        "level": true,
        "message": true,
        "jsonPayload": true,
        "stackTrace": true
      }
    },
    "src/managers/*.js": { 
      "level": "warn",
      "display": {
        "jsonPayload": false
      }
    },
    "src/popup.js": { 
      "level": "debug",
      "emoji": "🎛️",
      "timestampMode": "relative",
      "display": {
        "timestamp": true,
        "emoji": true,
        "component": true,
        "level": false,
        "message": true,
        "jsonPayload": false,
        "stackTrace": true
      }
    },
    "src/background.js": {
      "level": "info",
      "display": {
        "jsonPayload": false,
        "stackTrace": false
      }
    },
    "src/cacp.js": {
      "level": "debug",
      "emoji": "🎯",
      "display": {
        "level": true,
        "jsonPayload": true
      }
    },
    "src/sites/youtube.js": {
      "level": "info",
      "emoji": "📹",
      "timestampMode": "readable",
      "display": {
        "timestamp": true,
        "jsonPayload": false
      }
    },
    "src/test-*.js": {
      "level": "trace",
      "emoji": "🧪",
      "timestampMode": "disable",
      "display": {
        "timestamp": false,
        "level": true,
        "jsonPayload": true
      }
    }
  }
}