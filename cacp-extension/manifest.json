{
  "manifest_version": 3,
  "name": "CACP - Chrome Audio Control Platform",
  "description": "Universal audio control for DeskThing across multiple streaming sites",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://soundcloud.com/*",
    "https://www.youtube.com/*",
    "https://music.youtube.com/*",
    "https://open.spotify.com/*",
    "https://music.apple.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://soundcloud.com/*",
        "https://www.youtube.com/*", 
        "https://music.youtube.com/*",
        "https://open.spotify.com/*",
        "https://music.apple.com/*"
      ],
      "js": [
        "logger-config.js",
        "logger.js",
        "sites/base-handler.js",
        "sites/soundcloud.js",
        "sites/youtube.js",
        "managers/site-detector.js",
        "managers/priority-manager.js",
        "managers/websocket-manager.js",
        "cacp.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CACP Status"
  },
  "options_page": "settings/settings.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
